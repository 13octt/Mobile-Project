<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#4174C1" />
            <gradient android:angle="-90" android:startColor="#4174C1" android:endColor="#4174C1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="8dp" android:color="#4174C1" />
            <solid android:color="#4174C1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="8dp" android:color="#4174C1" />
            <gradient android:angle="-90" android:startColor="#00AFEF" android:endColor="#6157CC" />
        </shape>
    </item>
</selector>