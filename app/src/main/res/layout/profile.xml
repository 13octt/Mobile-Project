<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/three">
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/left"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp">
</ImageButton>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/avt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >

    </de.hdodenhof.circleimageview.CircleImageView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your username"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_below="@id/avt"
    android:layout_marginTop="10dp"
    android:layout_centerInParent="true"
    android:fontFamily="@font/mulish_light"
    >
</TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/one"
        android:layout_marginTop="230dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="100dp"
        >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/framenickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mulish_semibold"
        android:text="Name"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/mulish_semibold"
        android:text="your username"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_below="@id/framename">

    </TextView>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_toRightOf="@id/framename"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="25dp">

    </ImageButton>


    <TextView
        android:id="@+id/framename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mulish_semibold"
        android:text="Name"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/mulish_semibold"
        android:text="your username"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_below="@id/framename">

    </TextView>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_toRightOf="@id/framename"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="25dp">

    </ImageButton>
</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>