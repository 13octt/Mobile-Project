<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="40dp"
        android:layout_margin="10dp"
        android:elevation="20dp"
        android:id="@+id/img"
        >

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/bg1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bigfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mulish_extrabold"
        android:text="Discover our                     New features here"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/smallfont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigfont"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/mulish_light"
        android:text="We have some new features added to satisfy your expectations"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp">

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/smallfont"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/grey"
        android:backgroundTintMode="screen"
        android:background="@drawable/relativeborder"
        android:paddingHorizontal="5dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signinbttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:text="Sign in"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:fontFamily="@font/mulish_light"
            android:backgroundTint="@color/white"
            android:stateListAnimator="@null">

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerbttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            android:layout_toRightOf="@id/signinbttn"
            android:paddingVertical="20dp"
            android:paddingHorizontal="50dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/mulish_light"
            android:backgroundTint="@color/grey"
            style="@style/Widget.AppCompat.Button.Borderless.Colored">
        </com.google.android.material.button.MaterialButton>
    </RelativeLayout>

</RelativeLayout>